<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stocker.stockerexercise" >

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.stocker.android.StockerApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <meta-data
            android:name="DATABASE"
            android:value="stocks.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.stocker.android" />
        <activity
            android:name="com.stocker.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.stocker"
            android:name="com.stocker.android.model.StocksQuoteProvider"
            android:exported="true"
            android:grantUriPermissions="true"
            android:label="SampleVolleyProvider"
            android:readPermission="com.stocker.stockerexercise.READ" />
    </application>

</manifest>
